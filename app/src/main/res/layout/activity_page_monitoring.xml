<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndeksMassaTubuh.page_monitoring"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/viewOne"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/background_color"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/tool"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            app:layout_collapseMode="parallax">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_back"
                                android:background="@android:color/transparent"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginStart="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monitoring Kesehatan"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginStart="25dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:src="@drawable/ic_monitoring_kesehatan_foreground"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/viewTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@drawable/background_monitoring"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="60dp"
                                android:layout_marginLeft="60dp"
                                android:layout_marginRight="40dp"
                                android:layout_marginEnd="40dp"
                                android:background="@drawable/background_circle"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_bmi_foreground"/>
                            </LinearLayout>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_bmi"
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="toIndeksMassaTubuh">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:fontFamily="sans-serif"
                                        android:text="Indeks Massa Tubuh"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="13sp"
                                        android:fontFamily="sans-serif"
                                        android:text="Monitoring IMT"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="60dp"
                                android:layout_marginLeft="60dp"
                                android:layout_marginRight="40dp"
                                android:layout_marginEnd="40dp"
                                android:background="@drawable/background_circle"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_kolesterol_foreground"/>
                            </LinearLayout>
                            <androidx.cardview.widget.CardView
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="toTensi">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:fontFamily="sans-serif"
                                        android:text="Tensi"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="13sp"
                                        android:fontFamily="sans-serif"
                                        android:text="Monitoring Tensi Darah"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="60dp"
                                android:layout_marginLeft="60dp"
                                android:layout_marginRight="40dp"
                                android:layout_marginEnd="40dp"
                                android:background="@drawable/background_circle"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_detak_jantung_foreground"/>
                            </LinearLayout>
                            <androidx.cardview.widget.CardView
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="toDenyutJantung">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:fontFamily="sans-serif"
                                        android:text="Detak Jantung"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="13sp"
                                        android:fontFamily="sans-serif"
                                        android:text="Monitoring Detak Jantung"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="60dp"
                                android:layout_marginLeft="60dp"
                                android:layout_marginRight="40dp"
                                android:layout_marginEnd="40dp"
                                android:background="@drawable/background_circle"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_aktivitas_foreground"/>
                            </LinearLayout>
                            <androidx.cardview.widget.CardView
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="toAktivitas">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:fontFamily="sans-serif"
                                        android:text="Aktivitas Harian"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="13sp"
                                        android:fontFamily="sans-serif"
                                        android:text="Monitoring Detak Jantung"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="47dp"
                            android:layout_marginStart="47dp"
                            android:text="Quote hari ini"
                            android:fontFamily="sans-serif"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="15dp"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginBottom="20dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_vertical">
                                <TextView
                                    android:id="@+id/quote"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:fontFamily="sans-serif"
                                    android:text="Tanggal"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:gravity="center_horizontal"
                                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_anchor="@id/viewOne"
                app:layout_anchorGravity="bottom|center"
                android:paddingTop="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="60dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/clock"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/clock"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/tanggalMonitoring"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Tanggal"
                            android:textColor="#000"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_toRightOf="@id/clock"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@id/clock" />
                        <TextView
                            android:id="@+id/jamMonitoring"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif"
                            android:text="Jam"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_below="@id/tanggalMonitoring"
                            android:layout_toRightOf="@id/clock"
                            android:layout_toEndOf="@id/clock" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </ScrollView>




</LinearLayout>