            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="50dp"
                app:layout_anchor="@id/linear_1"
                app:layout_anchorGravity="top|center">
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:background="@drawable/background_color">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_bmi_foreground"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="50dp"
                app:layout_anchor="@id/linear_2"
                app:layout_anchorGravity="top|center">
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/background_circle"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_kolesterol_foreground"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/background_circle"
                android:gravity="center"
                app:layout_anchor="@id/linear_3"
                app:layout_anchorGravity="top|center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_detak_jantung_foreground"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/background_circle"
                android:gravity="center"
                app:layout_anchor="@id/linear_4"
                app:layout_anchorGravity="top|center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_aktivitas_foreground"/>
            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </ScrollView>




</LinearLayout>