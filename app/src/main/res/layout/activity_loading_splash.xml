<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingSplash"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loadingGambar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_loading_foreground"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sedang mengupdate profil..."
        android:textColor="#424874"
        android:layout_below="@id/loadingGambar"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/progresBar12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"/>

</RelativeLayout>