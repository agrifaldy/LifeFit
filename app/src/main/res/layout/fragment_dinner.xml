<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    tools:context=".dinner"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAKANAN"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_contohMakanan"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_contohMakanan"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/saladbuah"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/tv_contohMakanan"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="Salad Buah"
                            android:textSize="15sp"
                            android:layout_below="@id/iv_contohMakanan"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 KCAL"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_contohMakanan2"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="3dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_contohMakanan2"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/yogurt"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/tv_contohMakanan2"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="Yogurt"
                            android:textSize="15sp"
                            android:layout_below="@id/iv_contohMakanan2"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="58,8 KCAL"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_contohMakanan3"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="3dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_contohMakanan3"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/supayam" />

                        <TextView
                            android:id="@+id/tv_contohMakanan3"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="Sup Ayam"
                            android:textSize="15sp"
                            android:layout_below="@id/iv_contohMakanan3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="36,1 KCAL"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_contohMakanan4"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="3dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_contohMakanan4"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/buncis"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/tv_contohMakanan4"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="Sayur Buncis"
                            android:textSize="15sp"
                            android:layout_below="@id/iv_contohMakanan4"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30,8 KCAL"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_contohMakanan5"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="3dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_contohMakanan5"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/pisang"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/tv_contohMakanan5"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="Pisang"
                            android:textSize="15sp"
                            android:layout_below="@id/iv_contohMakanan5"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="88,7 KCAL"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_contohMakanan6"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="3dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_contohMakanan6"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/udang"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/tv_contohMakanan6"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="Masakan Udang"
                            android:textSize="15sp"
                            android:layout_below="@id/iv_contohMakanan6"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="99,2 KCAL"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MINUMAN"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"/>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>